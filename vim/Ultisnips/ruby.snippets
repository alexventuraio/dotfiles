snippet ppp "Just to print out any variable with emoji" bA
puts "💭 " * 50
pp(${1:params})
endsnippet

snippet ppi "Just to print out any variable with random emojis" bA
a = ["💭", "✅", "❤️", "🚀", "😎", "👻", "👍", "😸", "⭐️", "🚨", "🦋", "🤷🏻‍♂️", "🦄", "🏁", "🐷", "🤷🏻‍♂️", "1️⃣", "☑️"]
puts a.sample * 50
pp(${1:params})
endsnippet

